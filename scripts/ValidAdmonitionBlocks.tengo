/*
    Tengo Language
    $ tengo ValidAdmonitionBlocks.tengo <asciidoc_file_to_validate>
*/

fmt := import("fmt")
os := import("os")
text := import("text")

input := os.args()
scope := os.read_file(input[2])
matches := []

//trim extra whitespace
scope = text.trim_space(scope)
//add a newline, it might be missing
scope += "\n"

admon_delim_regex := "^={4}$"
count := 0

for line in text.split(scope, "\n") {
  if text.re_match(admon_delim_regex, line) {
    count += 1
    start := text.index(scope, line)
    matches = append(matches, {begin: start, end: start + len(line)})
  } else if count > 1 {
    count = 0 // admonition block is closed, reset the count
    matches = []
  }
}

if len(matches) == 0 {
  fmt.println("Valid admonitions")
} else {
  fmt.println(matches) 
}